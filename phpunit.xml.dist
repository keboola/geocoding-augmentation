<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
		 backupStaticAttributes="false"
		 colors="true"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 processIsolation="false"
		 stopOnFailure="true"
		 syntaxCheck="false"
		 bootstrap="Tests/bootstrap.php">
	<php>
		<server name="KERNEL_DIR" value="vendor/keboola/syrup/app/" />
		<ini name="display_errors" value="true"/>
	</php>
	<testsuites>
		<testsuite name="all">
            <file>tests/Keboola/GeocodingAugmentation/ParametersValidationTest.php</file>
            <file>tests/Keboola/GeocodingAugmentation/UserStorageTest.php</file>
            <file>tests/Keboola/GeocodingAugmentation/AugmentationTest.php</file>
			<file>tests/Keboola/GeocodingAugmentation/FunctionalTest.php</file>
		</testsuite>
	</testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
        <blacklist>
            <directory>build</directory>
            <directory>tests</directory>
            <directory>vendor</directory>
        </blacklist>
    </filter>
</phpunit>
